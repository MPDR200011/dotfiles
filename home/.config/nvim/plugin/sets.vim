set nocompatible

" limits and tabs
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set colorcolumn=80
set signcolumn=yes
set scrolloff=5

" default settings
set relativenumber
set nu
set nohlsearch
set hidden
set noerrorbells
set nowrap
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set termguicolors
set encoding=utf-8
set shortmess+=c

set cmdheight=2
set updatetime=50

set laststatus=2
set cursorline
